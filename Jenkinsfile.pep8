node {
	ansiColor('xterm') {
		stage('Preparing environment'){
			rm -rf ~/virtualenv-wasp-general-pep8/
			virtualenv -p /usr/bin/python3 ~/virtualenv-wasp-general-pep8/
		}

		stage('Installing package and requirements'){
			checkout scm
			~/virtualenv-wasp-general-pep8/bin/pip install -r requirements.txt
			~/virtualenv-wasp-general-pep8/bin/pip install -r dev-requirements.txt
			~/virtualenv-wasp-general-pep8/bin/pip install -r .
		}
	}
}
